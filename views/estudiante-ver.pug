doctype html
html(lang="es")
  head
    title Información de Estudiante
    link(rel='stylesheet', href='/styles/styles.css')
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")


  body
    h1 Información del Estudiante  
    div
      p Nombre: #{estudiante.nombre}
      p DNI: #{estudiante.dni}
    br
    if cursos 
      each curso of cursos
        - var cursoId = curso._id
        div(style="border: 1px solid grey; padding: 1rem; margin: 1rem; min-width: 600px") 
          p Curso: #{curso.curso} - Calificación: #{curso.calificacion}
          br
    br
    a(href="/") Volver al inicio
    br